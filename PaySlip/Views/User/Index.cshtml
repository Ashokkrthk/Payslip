@model IEnumerable<BusinessLayer.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ListLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<style>
    .trash {
        color: red;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @item.DOB.ToShortDateString()
                    @*@Html.DisplayFor(modelItem => item.DOB)*@
                </td>
                <td>
                    @item.DOJ.ToShortDateString()
                    @*@Html.DisplayFor(modelItem => item.DOJ)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>

                <td>
                    <span>
                        @Html.ActionLink("", "Edit", new { id = item.ID }, new { @class = "fa fa-edit" })
                        @Html.ActionLink("", "Details", new { id = item.ID }, new { @class = "fa fa-eye" })
                        @Html.ActionLink("", "Delete", new { id = item.ID }, new { @class = "fa fa-trash trash" })
                    </span>

                </td>
                <td>
                    <span>
                        @Html.ActionLink("Add", "AddSalary", new { id = item.ID, userType = item.UserType }, new {@class ="fas fa-dollar-sign"})
                    </span>
                </td>
                <td>
                    <span>
                        @Html.ActionLink("Edit", "EditSalary", new { id = item.ID, userType = item.UserType }, new { @class = "fas fa-dollar-sign" })
                    </span>
                </td>
            </tr>

        }
    </tbody>
</table>

